<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.tistory.zxcv5500.androidplayground.MainActivity">

    <com.tistory.zxcv5500.androidplayground.MyCustomView
        android:id="@+id/indicator"
        app:selected="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        >

    </com.tistory.zxcv5500.androidplayground.MyCustomView>



    <Button
        android:id="@+id/button"
        android:layout_below="@id/indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="눌러서 갱신"
        />

    <com.tistory.zxcv5500.androidplayground.MultiCheckBox
        android:id="@+id/multicheck"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/button"
        android:layout_centerHorizontal="true"
        />

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/multicheck"
        />

    <com.tistory.zxcv5500.androidplayground.doit.DateTimePicker
        android:id="@+id/dateTimePicker"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@id/textView1"
        />

</RelativeLayout>
